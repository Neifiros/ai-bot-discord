import discord
import youtube_dl
from discord.ext import commands

client = commands.Bot(command_prefix = *)

players={}

@client.event
async def on_ready():
	await client.change_presence(game=discord.Game(name="DÃ©foncer BlakHord"))
	print('Bot online')

async def new_membre(membre):
    server = membre.server
    fmt = 'Bienvenue {0.mention} sur {1.name}!'
    await client.send_message(server, fmt.format(membre, server))

@client.command(pass_context=True)
async def join(ctx):
	channel = ctx.message.author.voice.voice_channel
	await client.join_voice_channel(channel)

@client.command(pass_context=True)
async def quit(ctx):
	server = ctx.message.server
	voice_client = client.voice_client_in(server)
	await voice_client.disconnect()

@client.command(pass_context=True)
async def play(ctx, url):
	server = ctx.message.server
	voice_client = client.voice_client_in(server)
	player = await voice_client.create_ytdl_player(url)
	players[server.id] = player
	player.start()

client.run('Mjc3MDUyNDM3MzM0ODUxNTg0.DuL8sA.3cHKM2gZNDI2JdHV3L1wn9S4fHc')
